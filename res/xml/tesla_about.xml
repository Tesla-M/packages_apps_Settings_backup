	<PreferenceScreen
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:title="About Tesla"
	    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

	<!-- Tesla OTA -->
	<PreferenceScreen
	       android:key="slimota"
	       android:title="@string/slimota_title" >
	       <intent
	           android:action="android.intent.action.MAIN"
	           android:targetPackage="com.fusionjack.slimota"
	           android:targetClass="com.fusionjack.slimota.MainActivity" />
	</PreferenceScreen>

	<!-- Changelog -->
        <PreferenceScreen 
         	android:key="translator"
         	android:title="@string/changelog_tesla_title"
         	android:fragment="com.android.settings.tesla.Changelog" />    

	<PreferenceScreen android:title="Google+">
	    <intent
	        android:action="android.intent.action.VIEW"
	        android:data="https://plus.google.com/communities/109330559573276360638" />
	</PreferenceScreen>

	<PreferenceScreen android:title="Website">
	    <intent
	        android:action="android.intent.action.VIEW"
	        android:data="http://validusrom.com/" />
	</PreferenceScreen>

		<!-- Developers -->
	    <PreferenceCategory
	        android:key="category_tesla_developers"
	        android:title="Developers">

	    <Preference
	        android:title="John Brewer (TheRingmaster)"
		    android:summary="Tesla lead developer"/>
	    </PreferenceCategory>
	    <Preference
	        android:title="Anthony Pyrtle (Yayo)"
	            android:summary="Tesla hammerhead maintainer/developer"/>
	    </PreferenceCategory>       
</PreferenceScreen>
